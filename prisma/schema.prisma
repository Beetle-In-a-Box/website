generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Issue {
  id        String    @id @default(cuid())
  title     String
  number    Int       @unique
  date      String
  // Image URL or path - can store uploaded image paths
  imageUrl  String?
  published Boolean   @default(false)
  articles  Article[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([number])
  @@index([published])
}

model Article {
  id              String   @id @default(cuid())
  title           String
  shortTitle      String?
  number          Int
  author          String
  // Cover image URL or path - can store uploaded image paths
  imageUrl        String?
  // Article content stored as HTML or Markdown
  content         String   @db.Text
  // Citations/footnotes stored as HTML
  citations       String?  @db.Text
  // Preview text for issue page
  previewText     String   @db.Text
  // Generated filename for URL-friendly access
  fileName        String
  published       Boolean  @default(false)

  // Relation to Issue
  issueId         String
  issue           Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([issueId, number])
  @@index([issueId])
  @@index([published])
  @@index([fileName])
}
